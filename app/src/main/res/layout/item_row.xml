<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="#FFFFFF">

    <FrameLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="#61000000" />

        <TextView
            android:id="@+id/tvnumberorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="#ffffff" />
    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">


            <TextView
                android:id="@+id/tvaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2.7sp"
                android:text="Masjid jame"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/numberphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:paddingRight="20dp"
                android:text="0123456"
                android:textColor="#de000000"
                android:textSize="13sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvaddressdigital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0.7sp"
            android:text="jalan cendamama"
            android:layout_marginBottom="5dp"
            android:textColor="#8b000000"
            android:textSize="13sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgcar"
                android:layout_width="17dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView

                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2sp"
                android:text="4min  100km"
                android:textColor="#8b000000"
                android:textSize="13sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>